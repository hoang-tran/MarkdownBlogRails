<%= form_for [@article, @comment] do |f| %>
    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :body %><br>
      <%= f.text_area :body%>
    </div>
    <div class="actions">
      <%= f.submit 'Add Comment' %>
    </div>
<% end %>
