<div class="card">
  <div class="card-block">
    <h4 class="card-title"><%= article.title%></h4>
    <p><i><%= I18n.l article.created_at, format: :short %></i></p>
    <% if article.feature_image %>
      <img src="<%= article.feature_image %>" class="img-fluid">
    <% end %>
    <p class="card-text"><%= markdown.render(article.body).html_safe %></p>
  </div>
  <% if showButtonView %>
    <%= link_to 'View details', article_path(article), class: 'btn btn-link'%>
  <% else %>
    <%= link_to 'Back', root_path, class: 'btn btn-link'%>
    <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-link'%>
    <%= link_to 'Delete this article',
                article_path(article),
                method: :delete,
                data: { confirm: 'Are you sure you want to delete this article?' },
                class: 'btn btn-link'%>
  <%end%>
</div>