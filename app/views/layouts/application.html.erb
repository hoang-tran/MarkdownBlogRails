<!DOCTYPE html>
<html>
<head>
  <title>MarkdownBlogRails</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-light bg-faded">
  <div class="nav navbar-nav">
    <%= link_to "Hoang\'s blog", root_path, class: 'nav-item nav-link'%>
    <%= link_to 'New Article', new_article_path, class: 'nav-item nav-link'%>

    <div class="col-lg-6">
      <%= form_tag(root_path, method: 'get', class: 'input-group') do %>
          <%= text_field_tag :q, params[:q], placeholder: 'Search for...', class: 'form-control' %>
      <span class="input-group-btn">
        <%= submit_tag "Go", class: 'btn btn-default' %>
      </span>
      <% end %>
    </div>

  </div>
</nav>

<%= yield %>

</body>
</html>
